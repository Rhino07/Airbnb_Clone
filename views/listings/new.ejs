<% layout("/layouts/boilerplate") -%>

    <div class="new-listing-wrapper my-5">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-8">

                <div class="new-listing-card p-4 p-md-5">
                    <h3 class="new-listing-heading text-center mb-4">
                        Create a New Listing
                    </h3>

                    <form class="new-listing-form needs-validation" action="/listings" method="post" novalidate>

                        <!-- Title -->
                        <div class="mb-3">
                            <input type="text" class="form-control new-listing-input" name="listing[title]"
                                placeholder="Title (e.g. Cozy beach house)" required>
                            <div class="invalid-feedback">
                                Title is required.
                            </div>
                        </div>

                        <!-- Description -->
                        <div class="mb-3">
                            <input type="text" class="form-control new-listing-input" name="listing[description]"
                                placeholder="Short description" required>
                            <div class="invalid-feedback">
                                Description is required.
                            </div>
                        </div>

                        <!-- Image -->
                        <div class="mb-3">
                            <input type="text" class="form-control new-listing-input" name="listing[image]"
                                placeholder="Image URL">
                            <small class="new-listing-hint">
                                Paste a direct image link
                            </small>
                        </div>

                        <!-- Price -->
                        <div class="mb-3">
                            <input class="form-control new-listing-input" name="listing[price]"
                                placeholder="Price per night" min="1" required>
                            <div class="invalid-feedback">
                                Price must be a positive number.
                            </div>
                        </div>

                        <!-- Location -->
                        <div class="mb-3">
                            <input type="text" class="form-control new-listing-input" name="listing[location]"
                                placeholder="City / Area" required>
                            <div class="invalid-feedback">
                                Location is required.
                            </div>
                        </div>

                        <!-- Country -->
                        <div class="mb-4">
                            <input type="text" class="form-control new-listing-input" name="listing[country]"
                                placeholder="Country" required>
                            <div class="invalid-feedback">
                                Country is required.
                            </div>
                        </div>

                        <button type="submit" class="btn new-listing-btn w-100">
                            <i class="fa-solid fa-plus me-2"></i>
                            Create Listing
                        </button>

                    </form>
                </div>

            </div>
        </div>
    </div>