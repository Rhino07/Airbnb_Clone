<% layout("/layouts/boilerplate") -%>

    <div class="listing-show-wrapper my-5">
        <div class="row justify-content-center">
            <div class="col-lg-7 col-md-9">

                <div class="listing-show-card">

                    <!-- Image -->
                    <% if (listing.image) { %>
                        <div class="listing-show-image-wrapper">
                            <img src="<%= listing.image.url %>" alt="<%= listing.title %>" class="listing-show-image">
                        </div>
                        <% } %>

                            <div class="p-4 p-md-5">
                                <h3 class="listing-show-heading mb-4">
                                    <%= listing.title %>
                                </h3>

                                <ul class="listing-show-list list-unstyled mb-4">
                                    <li class="listing-show-item mb-3">
                                        <i class="fa-solid fa-align-left me-2"></i>
                                        <span>
                                            <%= listing.description %>
                                        </span>
                                    </li>

                                    <li class="listing-show-item mb-3">
                                        <i class="fa-solid fa-dollar-sign me-2"></i>
                                        <strong>
                                            $<%= listing.price.toLocaleString("en-US") %>
                                        </strong>
                                        <span class="text-muted"> / night</span>
                                    </li>

                                    <li class="listing-show-item mb-3">
                                        <i class="fa-solid fa-location-dot me-2"></i>
                                        <span>
                                            <%= listing.location %>, <%= listing.country %>
                                        </span>
                                    </li>
                                </ul>

                                <div class="d-flex gap-3">
                                    <a href="/listings/<%= listing._id %>/edit"
                                        class="btn btn-outline-primary listing-show-edit-btn">
                                        <i class="fa-solid fa-pen-to-square me-1"></i>
                                        Edit
                                    </a>

                                    <form action="/listings/<%= listing._id %>?_method=DELETE" method="post"
                                        onsubmit="return confirm('Are you sure you want to delete this listing?');">
                                        <button class="btn btn-outline-danger listing-show-delete-btn">
                                            <i class="fa-solid fa-trash me-1"></i>
                                            Delete
                                        </button>
                                    </form>
                                </div>
                            </div>

                </div>

                <!-- Review Section -->
                <div class="listing-show-card review-card mt-4">
                    <div class="p-4 p-md-5">
                        <h4 class="listing-show-heading mb-4">
                            Leave a review
                        </h4>

                        <form action="/listings/<%= listing._id %>/reviews" method="POST">

                            <!-- Rating -->
                            <div class="mb-4">
                                <label for="rating" class="form-label fw-semibold">
                                    Rating
                                </label>

                                <div class="d-flex align-items-center gap-3">
                                    <input type="range" min="1" max="5" value="3" id="rating" name="review[rating]"
                                        class="form-range">

                                    <span class="badge bg-primary px-3 py-2">
                                        <span id="ratingValue">3</span> ‚≠ê
                                    </span>
                                </div>
                            </div>

                            <!-- Comment -->
                            <div class="mb-4">
                                <label for="comment" class="form-label fw-semibold">
                                    Comment
                                </label>
                                <textarea name="review[comment]" id="comment" rows="4" class="form-control"
                                    placeholder="Write your experience here..." required></textarea>
                            </div>

                            <!-- Submit Button -->
                            <button class="btn btn-primary">
                                <i class="fa-solid fa-paper-plane me-1"></i>
                                Submit Review
                            </button>

                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <!-- Reviews Display Section (Airbnb Style) -->
    <div class="listing-show-card mt-4 review-section">
        <div class="p-4 p-md-5">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h4 class="listing-show-heading mb-0">
                    <i class="fa-solid fa-comments me-2"></i> Reviews
                </h4>

                <span class="review-count text-muted">
                    <%= listing.reviews.length %> review<%= listing.reviews.length===1 ? "" : "s" %>
                </span>
            </div>

            <% if (listing.reviews.length===0) { %>
                <div class="review-empty text-muted">
                    No reviews yet. Be the first one!
                </div>
                <% } else { %>

                    <div class="review-grid">
                        <% listing.reviews.forEach((review)=> { %>

                            <div class="review-card-airbnb">

                                <!-- Header -->
                                <div class="review-top">
                                    <div class="review-user">
                                        <div class="review-avatar">
                                            <i class="fa-solid fa-user"></i>
                                        </div>

                                        <div>
                                            <div class="review-name">Guest</div>
                                            <div class="review-date text-muted">
                                                <%= review.createdAt ? review.createdAt.toDateString() : "" %>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Delete button -->
                                    <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
                                        method="POST" onsubmit="return confirm('Delete this review?');">
                                        <button class="review-delete-btn" type="submit" title="Delete review">
                                            <i class="fa-solid fa-trash"></i>
                                        </button>
                                    </form>
                                </div>

                                <!-- Stars -->
                                <div class="review-stars">
                                    <% for(let i=1; i <=5; i++) { %>
                                        <% if(i <=review.rating) { %>
                                            <i class="fa-solid fa-star"></i>
                                            <% } else { %>
                                                <i class="fa-regular fa-star"></i>
                                                <% } %>
                                                    <% } %>
                                                        <span class="review-rating-number">
                                                            <%= review.rating %>.0
                                                        </span>
                                </div>

                                <!-- Comment -->
                                <p class="review-comment mb-0">
                                    <%= review.comment %>
                                </p>
                            </div>

                            <% }) %>
                    </div>

                    <% } %>
        </div>
    </div>


    <!-- Live Rating Script -->
    <script>
        const ratingInput = document.getElementById("rating");
        const ratingValue = document.getElementById("ratingValue");

        if (ratingInput && ratingValue) {
            ratingInput.addEventListener("input", () => {
                ratingValue.textContent = ratingInput.value;
            });
        }
    </script>