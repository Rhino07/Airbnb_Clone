<% layout("/layouts/boilerplate") -%>

    <div class="listings-index-wrapper my-5">
        <h3 class="mb-4 listings-index-heading">All Listings</h3>

        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 g-4">
            <% for (let listing of allListings) { %>

                <div class="col">
                    <a href="/listings/<%= listing._id %>" class="listing-link">

                        <div class="card listing-index-card h-100">
                            <img src="<%= listing.image.url %>" class="card-img-top listing-index-img"
                                alt="<%= listing.title %>">

                            <div class="card-img-overlay listing-index-overlay">
                                <p>
                                    <%= listing.description %>
                                </p>
                            </div>

                            <div class="card-body listing-index-body">
                                <p class="card-text">
                                    <strong>
                                        <%= listing.title %>
                                    </strong><br>
                                    $<%= listing.price.toLocaleString("en-US") %> / night
                                </p>
                            </div>
                        </div>

                    </a>
                </div>

                <% } %>
        </div>
    </div>